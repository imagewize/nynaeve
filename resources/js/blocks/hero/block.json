{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "imagewize/hero",
    "version": "0.1.0",
    "title": "Hero Section",
    "category": "layout",
    "icon": "table-col-after",
    "description": "A hero section with split layout featuring image and text.",
    "example": {},
    "supports": {
        "html": false,
        "align": ["full", "wide"],
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": false
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        }
    },
    "textdomain": "imagewize",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "className": {
            "type": "string",
            "default": "wp-block-imagewize-hero"
        },
        "overlayColor": {
            "type": "string",
            "default": "#017cb6"
        },
        "align": {
            "type": "string",
            "default": "full"
        }
    }
}