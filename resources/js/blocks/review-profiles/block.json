{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "imagewize/review-profiles",
    "version": "1.0.0",
    "title": "Review Profiles",
    "category": "imagewize",
    "icon": "star-filled",
    "description": "Display customer reviews with profile images in a three-column layout",
    "keywords": ["reviews", "testimonials", "profiles", "customers", "orange"],
    "example": [],
    "supports": {
        "html": false,
        "align": [
            "wide",
            "full"
        ],
        "anchor": true,
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "background": true,
            "text": true,
            "link": true,
            "gradients": true
        },
        "layout": {
            "default": {
                "type": "constrained"
            }
        }
    },
    "textdomain": "imagewize",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "className": {
            "type": "string",
            "default": "wp-block-imagewize-review-profiles"
        },
        "align": {
            "type": "string",
            "default": "full"
        },
        "backgroundColor": {
            "type": "string",
            "default": "#f97316"
        },
        "textColor": {
            "type": "string",
            "default": "white"
        }
    }
}