{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "imagewize/hero",
    "version": "0.1.0",
    "title": "Hero",
    "category": "layout",
    "icon": "table-col-after",
    "description": "A hero section for displaying key messages and images.",
    "example": {},
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "textdomain": "imagewize",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        },
        "backgroundColor": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "padding": {
            "type": "object",
            "default": {
                "top": "100px",
                "right": "0",
                "bottom": "100px",
                "left": "0"
            }
        },
        "contentLayout": {
            "type": "string",
            "default": "flex"
        }
    }
}