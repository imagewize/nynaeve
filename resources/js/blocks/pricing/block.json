{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "imagewize/pricing",
    "version": "0.1.0",
    "title": "Pricing",
    "category": "layout",
    "icon": "table-col-after",
    "description": "Display pricing options in a modern side-by-side layout.",
    "example": {},
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "textdomain": "imagewize",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "className": {
            "type": "string",
            "default": "wp-block-imagewize-pricing"
        },
        "title": {
            "type": "string",
            "default": "Website Packages."
        },
        "subtitle": {
            "type": "string",
            "default": "Choose the package that best fits your business needs"
        },
        "standardTitle": {
            "type": "string",
            "default": "Standard"
        },
        "standardDescription": {
            "type": "string",
            "default": "Perfect for small websites that need a professional presence."
        },
        "standardPrice": {
            "type": "string",
            "default": "€799"
        },
        "standardPriceNote": {
            "type": "string",
            "default": "starting price"
        },
        "standardFeatures": {
            "type": "array",
            "default": [
                "Shared hosting with trusted hosting partners",
                "Responsive, mobile friendly design",
                "Basic SEO setup",
                "Turnkey Theme tailored to your business"
            ]
        },
        "standardButtonText": {
            "type": "string",
            "default": "Get Started"
        },
        "standardButtonUrl": {
            "type": "string",
            "default": "#"
        },
        "premiumTitle": {
            "type": "string",
            "default": "Premium"
        },
        "premiumDescription": {
            "type": "string",
            "default": "Fully customized solution with advanced features."
        },
        "premiumPrice": {
            "type": "string",
            "default": "€2499"
        },
        "premiumPriceNote": {
            "type": "string",
            "default": "starting price"
        },
        "premiumFeatures": {
            "type": "array",
            "default": [
                "Premium VPS hosting (Trellis stack with Micro Caching, A+ SSL, WP CLI)",
                "Custom hybrid theme (block + classic elements)",
                "Advanced SEO optimization",
                "6-month maintenance plan"
            ]
        },
        "premiumButtonText": {
            "type": "string",
            "default": "Get Started"
        },
        "premiumButtonUrl": {
            "type": "string",
            "default": "#"
        },
        "showPopularBadge": {
            "type": "boolean",
            "default": true
        },
        "popularBadgeText": {
            "type": "string",
            "default": "MOST POPULAR"
        }
    }
}