{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "imagewize/related-articles",
    "version": "0.1.0",
    "title": "Related Articles",
    "category": "layout",
    "icon": "admin-post",
    "description": "Display the latest related articles from your blog.",
    "keywords": ["articles", "posts", "blog", "related", "recent"],
    "example": {},
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "textdomain": "imagewize",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "viewScript": "file:./view.js",
    "attributes": {
        "className": {
            "type": "string",
            "default": "wp-block-imagewize-related-articles"
        },
        "title": {
            "type": "string",
            "default": "Related Articles"
        },
        "numberOfPosts": {
            "type": "number",
            "default": 10
        },
        "relatedBy": {
            "type": "string",
            "default": "tag",
            "enum": ["tag", "category", "recent"]
        },
        "maxCommonThreshold": {
            "type": "number",
            "default": 50
        },
        "maxTagsToUse": {
            "type": "number",
            "default": 3
        },
        "titleAlignment": {
            "type": "string",
            "default": "center",
            "enum": ["left", "center", "right"]
        },
        "headerLevel": {
            "type": "number",
            "default": 2,
            "enum": [1, 2, 3, 4, 5]
        }
    }
}